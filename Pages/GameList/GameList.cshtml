@page
@model BattleShips.GameListModel
@{
    ViewData["Title"] = "GameList";
}


<h2>My Games</h2>
<div class="row">
    <div class="col">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.GameLists[0].GameCreatedAt)</th>
                    <th>@Html.DisplayNameFor(m => m.GameLists[0].GameState)</th>
                    <th>@Html.DisplayNameFor(m => m.GameLists[0].Player1)</th>
                    <th>@Html.DisplayNameFor(m => m.GameLists[0].Player2)</th>
                    <th>@Html.DisplayNameFor(m => m.GameLists[0].Remove)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.GameLists)
                {
                    <tr>
                        <td>@item.GameCreatedAt</td>
                        <td>@item.GameState</td>
                        <td>@item.Player1</td>
                        <td>@item.Player2</td>
                        <td><a asp-page-handler="remove" asp-route-id="@item.Remove" class="btn btn-outline-secondary"></a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


