<h3>Types of Ships</h3>


@*TODO - vykreslení lodí přes foreach*@
@*pocet lodi - pres button*@

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(m => m.Ship.Select)</th>
            <th>@Html.DisplayNameFor(m => m.Ship.Name)</th>
            <th>@Html.DisplayNameFor(m => m.Ship.Picture)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SetupShips)
        {
            <tr>
                <th>
                    <input class="radiobtn" type="checkbox" id="ponorka" value="option1">
                </th>
                <th>
                    @item.Name
                </th>
                <th>
                    todo image
                </th>
            </tr>
        }
    </tbody>
</table>


<a asp-page="./ShipPlacement" class="btn btn-primary">Start Ship Placement</a>



